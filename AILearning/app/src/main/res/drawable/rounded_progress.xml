<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo del ProgressBar -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/> <!-- Esquinas redondeadas -->
            <solid android:color="#DDDDDD"/> <!-- Color del fondo gris claro -->
        </shape>
    </item>

    <!-- Progreso del ProgressBar -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="15dp"/> <!-- Esquinas redondeadas -->
                <!-- Color de inicio, lo cambiaremos programÃ¡ticamente -->
                <gradient
                    android:endColor="#4FC936"
                    android:startColor="#4FC936"
                    android:centerColor="#4FC936"
                    android:angle="0"/>
            </shape>
        </clip>
    </item>
</layer-list>
