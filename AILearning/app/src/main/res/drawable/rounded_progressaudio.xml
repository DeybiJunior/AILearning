<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo del ProgressBar -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/> <!-- Esquinas redondeadas -->
            <solid android:color="@color/md_theme_background"/> <!-- Color de fondo suave (verde claro similar al fondo de Duolingo) -->
            <padding android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp"/>
        </shape>
    </item>

    <!-- Progreso del ProgressBar -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="10dp"/> <!-- Esquinas redondeadas -->
                <!-- Gradiente con colores vibrantes al estilo de Duolingo -->
                <gradient
                    android:angle="45"
                    android:startColor="@color/holo_green_ligth"
                    android:centerColor="@color/holo_green_ligth"
                    android:endColor="@color/holo_green_ligth"
                    android:type="linear"/>

            </shape>
        </clip>
    </item>
</layer-list>
