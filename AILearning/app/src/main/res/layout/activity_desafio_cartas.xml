<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/clouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_close"
                android:contentDescription="Icono de X"
                android:layout_marginEnd="8dp" />

            <!-- TextView y ProgressBar centrados -->
            <LinearLayout
                android:id="@+id/superior"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvProgreso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progreso..."
                    android:textSize="16sp"
                    android:textColor="#4FC936"
                    android:gravity="center" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:max="100"
                    android:progress="0"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/rounded_progress"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center" />
            </LinearLayout>

            <!-- Puntaje a la derecha -->
            <TextView
                android:id="@+id/tvPuntaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puntaje: 0"
                android:textColor="@color/md_theme_onSecondaryContainer"
                android:textSize="18sp"
                android:gravity="end"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- TextView para mostrar el contenido de lectura -->
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardimag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/reading_image_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fido" />

            <TextView
                android:id="@+id/reading_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="center"
                android:paddingTop="8dp"
                android:text="Aquí va el texto de lectura" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_flip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardElevation="4dp"
        app:cardCornerRadius="16dp">
        <!--Add a textView for front part of the card-->
        <TextView
            android:id="@+id/card_back"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:text="Back Card"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="@color/blancosiempre"
            android:background="@color/holo_green_ligth"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--Add a textview for back part of the card-->
        <TextView
            android:id="@+id/card_front"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Front Card"
            android:textStyle="bold"
            android:textSize="75sp"
            android:textColor="@color/blancosiempre"
            android:background="@color/md_theme_primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>


    <!-- MaterialButton para continuar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/continue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        app:cornerRadius="15dp"/> <!-- Cambia el color según tu tema -->

    <!-- TextView para la pregunta del quiz -->
    <TextView
        android:id="@+id/question_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:visibility="gone"/>

    <!-- RadioGroup para las opciones del quiz -->
    <RadioGroup
        android:id="@+id/options_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <!-- Botón para enviar la respuesta -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        app:cornerRadius="15dp"
        android:visibility="gone"
        app:backgroundTint="@color/holo_green_ligth" />
    <!-- Botón para continuar con la carta respuesta -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/card_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        app:cornerRadius="15dp"
        android:visibility="gone"
        app:backgroundTint="#3DC2DF"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-16dp"
        app:layout_constraintTop_toBottomOf="@id/etSpeechResult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Texto de Frase Final -->
        <TextView
            android:id="@+id/tvFraseFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="¡Has llegado al final!"
            android:textSize="36dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center"
            android:layout_marginBottom="8dp" />

        <!-- Imagen de estrellas -->
        <ImageView
            android:id="@+id/imageViewEstrellas"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:visibility="gone"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFraseFinal"
            app:layout_constraintWidth_percent="0.8"
            android:layout_marginBottom="8dp" />

        <!-- Imagen de Resultado -->
        <ImageView
            android:id="@+id/imagenResultado"
            android:layout_width="wrap_content"
            android:layout_height="524dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/imageViewEstrellas"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="-30dp"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginBottom="8dp" />

        <!-- Puntaje Final -->
        <TextView
            android:id="@+id/tvPuntajeFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puntaje Final: 0"
            android:textSize="24sp"
            android:visibility="gone"
            android:background="@drawable/background_round"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginBottom="16dp"
            android:textAlignment="center" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
