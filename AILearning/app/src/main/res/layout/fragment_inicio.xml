<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtBienvenida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bienvenido"
                android:textColor="@color/md_theme_outline"
                android:textSize="20dp"></TextView>


            <TextView
                android:id="@+id/txtNombreUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="32dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTexto1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Â¿Que vamos a hacer hoy?"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardOpcion1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="@color/md_theme_inverseOnSurface"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Text area with adjusted width for text content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:orientation="vertical"
                        android:paddingEnd="10dp">

                    <TextView
                        android:id="@+id/txtOpcion1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crear lecciones"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selecciona el tema y genera lecciones con IA."
                        android:textColor="@color/md_theme_outline"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Button next to the text -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOpcion1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical|end"
                    android:backgroundTint="@color/buttonBackground2"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    app:cornerRadius="140dp"
                    app:icon="@drawable/icon_flecha_derecha"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="30dp"
                    app:iconTint="@color/blancosiempre" />
            </LinearLayout>
    </RelativeLayout>

    </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardOpcion2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="@color/md_theme_inverseOnSurface"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:orientation="vertical"
                        android:paddingEnd="10dp">

                    <TextView
                        android:id="@+id/txtOpcion2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Historial de lecciones"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingBottom="4dp"/>

                    <TextView
                        android:id="@+id/textViewdificultad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vuelve a hacer tus lecciones o sube las que has hecho."
                        android:textColor="@color/md_theme_outline"
                        android:textSize="14sp" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOpcion2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical|end"
                    android:backgroundTint="@color/buttonBackground"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    app:cornerRadius="140dp"
                    app:icon="@drawable/icon_flecha_derecha"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="30dp"
                    app:iconTint="@color/blancosiempre" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
