<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/md_theme_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="LECCIONES "
        android:textSize="32dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/LinearNoLecciones"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvNoLecciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="16dp"
            android:text="No tienes lecciones para trabajar."
            android:visibility="visible" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSeleccionTema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/holo_green_ligth"
            android:padding="12dp"
            android:text="Seleccionar Tema"
            android:textColor="@color/blancosiempre"
            android:textStyle="bold"
            android:visibility="visible"
            app:cornerRadius="15dp"
            app:icon="@drawable/icon_add"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="@color/blancosiempre" />

    </LinearLayout>



    <!-- Contenedor para los CardView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:id="@+id/linearLayoutContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>


</LinearLayout>
