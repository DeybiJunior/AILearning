<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    app:cardBackgroundColor="@color/md_theme_inverseOnSurface"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewDocenteNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Docente"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/textViewDocenteColegio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Colegio del Docente"
                android:textColor="@color/md_theme_outline"
                android:textSize="14sp" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:padding="12dp"
            android:id="@+id/buttonAgregarDocente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/holo_green_ligth"
            android:text="Agregar"
            android:textColor="@color/blancosiempre"
            android:textStyle="bold"
            app:icon="@drawable/icon_docente"
            app:iconPadding="12dp"
            app:cornerRadius="15dp"
            app:iconGravity="textStart" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
