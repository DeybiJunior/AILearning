<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvFrase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Aprende por repeticion"
        android:textSize="24sp"
        android:textColor="@android:color/holo_blue_dark"
        android:paddingBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSpeechResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Resultado del reconocimiento de voz"
        android:textSize="18sp"
        android:textColor="@android:color/darker_gray"
        android:paddingBottom="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFrase" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEscucha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="PRESIONA PARA HABLAR"
        app:icon="@drawable/icon_microfono"
        android:drawablePadding="8dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSpeechResult"
        android:layout_marginTop="16dp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSiguiente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_green_light"
        android:padding="12dp"
        android:text="Siguiente"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
